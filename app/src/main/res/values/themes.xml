<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MataNetra" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Theme.MataNetraSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logomatanetrasplash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MataNetra</item>
    </style>

    <style name="Theme.MataNetra" parent="Base.Theme.MataNetra" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fab_circle</item>
    </style>

    <style name="fab_circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>
</resources>